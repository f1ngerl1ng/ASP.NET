@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "All Roles";
}

<div class="col-md-12 content-page">
    <div class="col-md-12 blog-post">
        <h1>All Roles</h1>
        @if (Model.Any())
        {
        <div class="sub-title">
            <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole"
               asp-controller="Administrator">Add new role</a>
            <a class="btn btn-primary mb-3" style="width:auto" asp-action="Admin"
               asp-controller="Admin">Back</a>
        </div>

            foreach (var role in Model)
            {
            <div class="card mb-3">

                <div class="card-body">
                    <h5 class="card-title">@role.Name</h5>
                </div>
                <div class="card-header">
                    Role Id : @role.Id
                </div>
                <div class="card-footer">
                    <a asp-controller="Administrator" asp-action="EditRole"
                       asp-route-id="@role.Id" class="btn btn-primary">
                        Edit
                    </a>
                    <a asp-controller="Administrator" asp-action="DeleteRole"
                       asp-route-id="@role.Id" class="btn btn-primary">
                        Delete
                    </a>
                </div>
            </div>
            }
        }
        else
        {
            <div class="card">
                <div class="card-header">
                    No roles created yet
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        Use the button below to create a role
                    </h5>
                    <a class="btn btn-primary" style="width:auto"
                       asp-controller="Administrator" asp-action="CreateRole">
                        Create Role
                    </a>
                </div>
            </div>
        }
    </div>
</div>
